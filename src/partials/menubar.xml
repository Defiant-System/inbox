<MenuBar>
	<Menu name="Inbox">
		<Menu name="About Inbox" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Views&#8230;">
			<Menu name="Default" click="show-view" arg="default" check-group="app-view"/>
			<Menu name="Start" click="show-view" arg="start" check-group="app-view"/>
			<Menu name="Demo Data" click="show-view" arg="demo" check-group="app-view"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Quit Inbox" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>

	<!-- contextmenus for app -->
	<Menu for="list-entry-actions">
		<Menu name="Show thread" click="menu-show-thread"/>
		<Menu name="Show attachments" click="menu-show-attachments"/>
		<Menu type="divider"/>
		<Menu name="Move to&#8230;" id="folders"/>
		<Menu type="divider"/>
		<Menu name="Delete" click="menu-delete-list-entry"/>
	</Menu>
	<Menu for="mail-actions">
		<Menu name="Reply" click="menu-reply-mail"/>
		<Menu name="Reply All" click="menu-reply-all-mail"/>
		<Menu name="Forward" click="menu-forward-mail"/>
		<Menu type="divider"/>
		<Menu name="Show attachments" click="menu-show-attachments"/>
		<Menu type="divider"/>
		<Menu name="Delete" click="menu-delete-mail"/>
	</Menu>
</MenuBar>